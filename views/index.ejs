<!DOCTYPE html>
<html lang="en" data-bs-theme="auto">
  <head>
    <script src="js/color-modes.js"></script>
    <link
      rel="stylesheet"
      href="bootstrap-icons-1.10.5/font/bootstrap-icons.min.css"
    />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="" />
    <meta
      name="author"
      content="Mark Otto, Jacob Thornton, and Bootstrap contributors"
    />
    <meta name="generator" content="Hugo 0.112.5" />
    <title>Home page</title>
    <link href="css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="css/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="./css/dark-light.css" />
    <link href="css/sidebars.css" rel="stylesheet" />
    <link rel="stylesheet" href="css/mystyle.css" />
  </head>

  <body>
    <%- include('./Components/dark-light.ejs') %>

    <main class="d-flex flex-nowrap">
      <%- include('./Components/sidebar.ejs' , {currentPage: "index"}) %>

      <section class="w-100 ; border">
        <%- include('./Components/navbar.ejs')%>

        <% if (arr.length === 0) { %>
         <h1 style=" text-align: center; margin-top: 4rem;">No data available</h1>
        <% } %>

        <% if (arr.length > 0) { %>
          <table
          style="width: 98%"
          class="table text-center table-striped border-secondary mx-auto table-bordered"
        >
          <thead>
            <tr>
              <th scope="col">Number</th>
              <th scope="col">Name</th>
              <th scope="col">Gender</th>
              <th scope="col">Country</th>
              <th scope="col">Age</th>
              <th scope="col">Last Updated</th>
              <th scope="col">Action</th>
            </tr>
          </thead>

          <tbody>
            <% arr.forEach((item , index) => { %>
              <tr>
                <th scope="row"><%= index + 1 %></th> 
                <td><%= item.firstname %> <%= item.lastname %></td>  
                <td><%= item.gender %></td>  
                <td><%= item.state %></td>  
                <td><%= item.age %></td>  
                <td><%= moment(item.UpdatedAt).fromNow() %></td>   
                <td>
                  <a
                    data-bs-toggle="tooltip"
                    data-bs-title="view details"
                    data-bs-placement="top"
                    class="btn btn-primary btn-sm"
                    href="/view/<%= item._id %>"
                   
                    ><i class="bi bi-eye-fill"></i></a>
                  <a
                    data-bs-toggle="tooltip"
                    data-bs-title="edit user"
                    data-bs-placement="top"
                    class="btn btn-primary btn-sm"
                    href="/edit/<%= item._id %>"
                  
                    ><i class="bi bi-pencil"></i></a>
                  <form action="/edit/<%= item._id %>?_method=DELETE" method="post"     style="display: inline;"><button
                    data-bs-toggle="tooltip"
                    data-bs-title="delete user"
                    data-bs-placement="top"
                    class="btn btn-danger btn-sm"
                    href="./user/delete.html"
                
                    ><i class="bi bi-trash3"></i>
                  </button></form>
                </td>
              </tr>
            <% }) %>
            

            
          </tbody>
        </table>
        <% } %>

       
      </section>
    </main>

    <script src="js/bootstrap.bundle.min.js"></script>
    <script src="js/sidebars.js"></script>
    <script>
      const toggleSidebar = () => {
        sidebarId.classList.add("small-sidebar");
      };
    </script>
  </body>
</html>
